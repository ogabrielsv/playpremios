# --- Database Connection (Prisma) ---
# For Supabase, use the Transaction Pooler URL (usually port 6543)
DATABASE_URL="postgresql://postgres.[ref]:[password]@[region].pooler.supabase.com:6543/postgres?pgbouncer=true"

# For Supabase, use the Session Connection URL (usually port 5432)
# Required for migrations (prisma db push)
DIRECT_URL="postgresql://postgres.[ref]:[password]@[region].supabase.co:5432/postgres"

# --- Supabase API (Optional for this code, but good to have) ---
# Found in Project Settings -> API
NEXT_PUBLIC_SUPABASE_URL="https://[ref].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

# --- App URL ---
NEXT_PUBLIC_APP_URL="https://seu-projeto.vercel.app"
